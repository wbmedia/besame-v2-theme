<style>
  .cart_drawer {
    height: 100%;
    width: 0;
    position: fixed;
    z-index: 99;
    top: 0;
    right: 0;
    background-color: white;
    overflow-x: hidden;
    transition: 0.5s;
    padding-top: 60px;
    border: 1px solid #eee;
  }

  .cart_drawer a {
    padding: 8px 8px 8px 32px;
    text-decoration: none;
    font-size: 12px;
    color: black;
    display: block;
    transition: 0.3s;
  }

  .cart_drawer a:hover {
    color: black;
  }

  .cart_drawer .closebtn {
    position: absolute;
    top: 0;
    right: 25px;
    font-size: 36px;
    margin-left: 50px;
  }

  @media only screen and (max-width: 749px) {
  }
</style>

<div id="cartDrawer" class="cart_drawer">
  <a href="javascript:void(0)" class="closebtn" onclick="closeCart()"
    >&times;</a
  >
  {% section 'cart-template-slider' %}
  
</div>

<script>
  function openCart() {
    document.getElementById("cartDrawer").style.display = "block";
  }

  function closeCart() {
    document.getElementById("cartDrawer").style.display = "none";
  }

</script>
