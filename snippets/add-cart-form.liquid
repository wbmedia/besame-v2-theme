<form id="add-to-cart-form">
  <select name="id" id="productSelect">
    {% for variant in product.variants %}
      {% if variant.available %}
        <option value="{{ variant.id}}">
          {{ variant.title }} - {{ variant.price | money_with_currency }}
        </option>
        {% else %}
        <option disabled="disabled">
          {{ variant.title }} - sold out
        </option>
      {% endif %}
    {% endfor %}
  </select>
  {{ current_variant.price | money }}
  <label for="Quantity">quantity</label>
  <input type="number" id="Quantity" name="quantity" value="1" min="1">
  <button @click="addToCart" type="submit" name="add" id="AddToCart" value="AddToCart">Add to Cart</button>
  
  ${test}
</form>

<script>
  if (document.querySelector("#add-to-cart-form")) {
    const productForm = Vue.createApp({
      delimiters: ['${', '}'],
      data() {
        return {
          variant: ''
        }
      },
      created() {
        axios.get("/products/{{ product.handle }}.js")
        .then(results => {
          console.log(results)
          this.variant = results.data.variants[0].id
        })
      },
      methods: {
        addToCart(e) {
          e.preventDefault()
          let data = {
            id: 12,
            quantity: 1
          }
          axios.post('/cart/add.js', data)
          .then(response => {
            console.log(response)
          }).catch(error => console.log(error))
        }
      },
    }).mount('#add-to-cart-form')
  }
</script>